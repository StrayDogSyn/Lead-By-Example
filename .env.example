# Environment Configuration Template
# Copy this file to .env.local for local development
# Copy this file to .env for production (update values accordingly)

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application URL (update for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application Name
NEXT_PUBLIC_APP_NAME="Lead By Example"

# Environment (development, staging, production)
NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Base URL (if using external API)
NEXT_PUBLIC_API_URL=

# API Key (if required)
API_KEY=

# =============================================================================
# DATABASE CONFIGURATION (if needed)
# =============================================================================

# Database URL
DATABASE_URL=

# Database Host
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lead_by_example
DB_USER=
DB_PASSWORD=

# =============================================================================
# AUTHENTICATION (if using NextAuth.js or similar)
# =============================================================================

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers (if applicable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =============================================================================
# EMAIL CONFIGURATION (if using email service)
# =============================================================================

# Email Service Provider
EMAIL_SERVER_HOST=
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=
EMAIL_FROM=noreply@leadbyexample.org

# SendGrid / Mailgun / etc.
SENDGRID_API_KEY=
MAILGUN_API_KEY=

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Vercel Analytics (automatically enabled on Vercel)
# No configuration needed

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# =============================================================================
# CMS / CONTENT (if using Headless CMS)
# =============================================================================

# Contentful
CONTENTFUL_SPACE_ID=
CONTENTFUL_ACCESS_TOKEN=
CONTENTFUL_PREVIEW_ACCESS_TOKEN=

# Sanity
NEXT_PUBLIC_SANITY_PROJECT_ID=
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=

# Strapi
STRAPI_API_URL=
STRAPI_API_TOKEN=

# =============================================================================
# FILE STORAGE (if using cloud storage)
# =============================================================================

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NEWSLETTER=true

# =============================================================================
# SOCIAL MEDIA & EXTERNAL LINKS
# =============================================================================

NEXT_PUBLIC_TWITTER_HANDLE=@leadbyexample
NEXT_PUBLIC_FACEBOOK_PAGE=
NEXT_PUBLIC_INSTAGRAM_HANDLE=
NEXT_PUBLIC_LINKEDIN_PAGE=

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable debug mode
DEBUG=false

# Skip TypeScript type checking during build (not recommended for production)
SKIP_TYPE_CHECK=false

# Skip ESLint during build (not recommended for production)
SKIP_ESLINT=false
